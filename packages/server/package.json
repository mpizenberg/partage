{
  "name": "@partage/server",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "serve": "cd bin && ./pocketbase serve",
    "start": "pnpm serve",
    "setup": "node setup-collections.js",
    "clear": "node clear-database.js",
    "reset": "node clear-database.js --delete-collections && node setup-collections.js",
    "build": "echo 'Server setup complete'",
    "clean": "rm -rf bin/pb_data/*.db"
  },
  "description": "PocketBase server for Partage - Zero-knowledge encrypted data relay",
  "dependencies": {
    "dotenv": "^16.4.7",
    "pocketbase": "^0.26.5"
  }
}
